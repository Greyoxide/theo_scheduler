
// first we have to clear the results of previous selections
$('#outlineid').val("")

$('.congregation .speakers .outlines').remove()
$('.speaker.active').removeClass('active')

// then we have to render the appropriate speaker list and append it to the correct congregation.
$('#speaker_<%= @speaker.id %>').after("<%= j render 'outline_list' %>")

$('#speakerid').val("<%= @speaker.id %>")
$('#speaker_<%= @speaker.id %>').addClass('active')

check_for_form_completion()