header
  = back_link
  h1 = @speaker.full_name
  = link_to 'Edit', [:edit, @speaker]
  ul.inline.links
    li = mail_to @speaker.email
    li = link_to @speaker.phone, "tel::#{@speaker.phone}"
    li = link_to "Transfer to another congregation", [:new, @speaker, :transfer]

section
  h3 Outlines
  ul.list
    = render @outlines
